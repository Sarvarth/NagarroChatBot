      "type": "TextBlock",
      "id": "{EndDate}",
      "spacing": "Medium",
      "weight": "Bolder",
      "color": "Dark",
      "text": " {EndDate.DayOfWeek} {EndDate} ",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "id": "{Comments}",
      "horizontalAlignment": "Left",
      "spacing": "Medium",
      "text": "Comments : {Comments}",
      "wrap": true
    }
