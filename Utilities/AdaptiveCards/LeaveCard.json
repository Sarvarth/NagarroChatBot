{
  "type": "AdaptiveCard",
  "backgroundImage": "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ2UUAHIoJQ7pO3rG6-Zju3ag0NXdJQe1tmz2AOn51BhyZ0qDcx",
  "body": [
    {
      "type": "Image",
      "horizontalAlignment": "Center",
      "spacing": "None",
